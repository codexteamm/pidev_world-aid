{% extends "AssociationBundle:Default:index.html.twig" %}

{% block title %}AppBundle:Security:add{% endblock %}


{% block body %}
<body>

<div>
    <br>
    <h5>Notifications list:</h5>
    <br>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">View</th>
        </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td>{{ notification.title }}</td>
                <td>{{ notification.description }}</td>

                {# <td><a href="{{ path('readnotif',{'id':listedemandes.idDemande}) }}">See</a></td> #}
            </tr>
        {% else %}
            <li>List is empty</li>
        {% endfor %}
        </tbody>
    </table>

</div>
</body>

{% endblock %}