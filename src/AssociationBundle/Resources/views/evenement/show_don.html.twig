{% extends "AssociationBundle:Default:index.html.twig" %}
{% block body %}

<h1 align="center">Show Donations For My Event </h1>
<table id="example" class="table table-striped table-bordered" style="width:100%" >
    <thead>
    <tr>
        <th>Material type </th>
        <th>Quantity</th>
        <th>Action</th>

    </tr>
    </thead>
    <tbody>
    {% for listedon in listedon %}
        <tr>
            <td>
                {{ listedon.typeMateriel }}
            </td>
            <td>
                {{ listedon.quantite }}
            </td>
            <td><a type="button" class="btn btn-primary btn-sm"  href="{{  path('deleteDon',{'id':listedon.reference}) }}"    onclick="return confirm('are u sure?')">Rejeter Don</a></td>

        </tr>
    {% endfor %}
    </tbody>
</table>
<input type = "button" value = "Retour"  class="btn btn-primary btn-sm"  onclick = "history.back()" align="center">

{% endblock %}


{% block tableauscript %}
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script> $(document).ready(function() {
            $('#example').DataTable();
        } );</script>
{% endblock %}