{% extends "AssociationBundle:Default:index.html.twig" %}

{% block title %}My Feebacks {% endblock title %}

{% block body %}
    <h3 style="padding-top:50px;">
        <center>Feedbacks of this event</center>
    </h3>
    <hr/>
    <br/>



    <div style="padding-bottom: 200px;padding-top:50px; margin-left: 20px;">

        {% if listFeed is empty %}


            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Information </h1>
                    <p class="lead">No feed back available for this event :</p>


                </div>
            </div>

        {% else %}


            {% for listFeed in listFeed %}

                <style>
                    #abc {
                        position: center;
                        width: 50rem;
                        height: 18rem;





                    }
                </style>

                <div class="card"  id ="abc">

                    <div class="card-body" style ="">
                        <h5 class="card-title">{{ listFeed.sujet }}</h5>
                        <p class="card-text">{{ listFeed.message }}</p>


                    </div>
                </div>





            {% endfor %}
        {% endif %}





    </div>

{% endblock body %}
{% block addedscripts %}
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
{% endblock %}
