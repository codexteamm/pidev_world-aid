{% extends "@Necessiteux/base_necessiteux.html.twig" %}
{% block body %}
    <html>
    <body>

    <center>
        <h1>Add a feedback</h1>
        <fieldset style=width: 50%">
        <br>

        <br>
        </fieldset>

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}


            {# Génération manuelle et éclatée : #}
                <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.titre, "Feedback title", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.titre) }}

                <div class="col-sm-10">
                    {# Génération de l'input. #}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            {# Idem pour un autre champ. #}
            <div class="form-group">
                {{ form_label(form.message, "Feedback message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.message) }}
                <div class="col-sm-10">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            {{ form_end(form) }}
        </div>
    </center>
    </body>
    </html>

{% endblock %}